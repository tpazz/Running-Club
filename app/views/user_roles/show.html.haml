/ Show page for User Roles
!!!
%html{:lang => "en"}
  / Head
  %head
  = favicon_link_tag 'favicon.ico'
  / Link all the style and javascript files needed
  %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}
  = stylesheet_link_tag    "application", media: :all
  = javascript_include_tag "application", media: "bootstrap.min"
  = csrf_meta_tags
  %body
    / Navigation Bar, always fixed at the top of the page
    = render "schedules/top_navbar"
    /End of Navigation
    / Display the header
    = render "layouts/header"
    %section
      / Display the navigation bar
      = render "schedules/navbar_s"
      .container.align-items-center
        .row.align-items-center
          .col-md.mx-auto
            .p-3
            / Notice message based on the type of change, specified in the controller
            %h3#notice= notice
            / Role
            %p
              %b Role:
              = @user_role.role.role_name
            / User's Full Name
            %p
              %b First Name:
              = @user_role.user.first_name
            %p
              %b Last Name:
              = @user_role.user.last_name
            / User's Email
            %p
              %b Email:
              = @user_role.user.email
            / Link to the edit page
            = link_to 'Edit', edit_user_role_path(@user_role), {:style => "color: black", :class => "btn"}
            \|
            / Link to go back
            = link_to 'Back', user_roles_path, {:style => "color: black", :class => "btn"}
            .p-3
/ Footer
= render "layouts/footer"
/ End of footer
