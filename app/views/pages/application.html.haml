/ Home page
!!!
%html{:lang => "en"}
  %head
  / Title
  %title Running Club
  = favicon_link_tag 'favicon.ico'
  / Linking all the style and javascript needed
  %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}
  = stylesheet_link_tag    "application", media: :all
  = javascript_include_tag "application", media: "bootstrap.min"
  = javascript_include_tag :cocoon
  = csrf_meta_tags
  %body
    / Navigation with three buttons
    / This page is showed to non-users, it contains public, nonsensible content
    %nav.navbar.navbar-expand-sm.navbar-dark.navbar-custom.fixed-top
      %a.navbar-brand{:href => "/"} Hope Valley Action Sports
      %ul.navbar-nav.ml-auto
        %li.nav-item.dropdown
          %a#navbardrop.nav-link.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"} Find more pages here
          .dropdown-menu
            %a.dropdown-item{:href => "/signup", id: 'Sign up'} Sign Up
            %a.dropdown-item{:href => "/login", id: 'Log in'} Log In
            %a.dropdown-item{:href => "coach_registration", id: 'Coach registration'} Coach Registration
    / End of the Navigation
    / Display Header
    / Using render to display different contents
    / To see the full code, look in the pages stated below
    / For example, in the folder layouts, look for the page called _header
    = render "layouts/header"
    / End of the header
    / Display Body
    = render "layouts/body"
    / End of the Body
    / Display Footer
    = render "layouts/footer"
    / End of the Footer
