// Form ued to display the relevant fields for an attendance
-# frozen_string_literal: true
= simple_form_for(@attendance) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  // input filds, specified with the parameters:
  .form-inputs
    = f.association :schedule
    = f.association :child
    = f.input :attended
  // Submit the changes with a button click
  .form-actions
    = f.button :submit
