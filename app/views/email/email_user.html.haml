!!!
-# Search user view
%html{:lang => "en"}
  %head
  %title Search
  %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}
    = stylesheet_link_tag    "sign_up", media: :all
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    -# Logout navbar
    %nav.navbar.navbar-expand-lg.navbar-dark.navbar-custom.fixed-top
      .container
        %a.navbar-brand{:href => "/"} Hope Valley Action Sports
        %ul.navbar-nav.ml-auto
          %li.nav-item
            %li{:id => "navbar-logout"}
              = link_to destroy_user_session_path, method: :delete, title: "Log out of the system" do
                = fa_icon 'sign-out', text: 'Log out'

    .signup-form
      %br
      %br
      %br
      = simple_form_for :search, url: search_results_path, method: :post do |f|
        %h3 Search users:
        %hr/
        = f.input :name, label: 'First name:'
        = f.button :submit, "Search", id: 'Search', :style => "background-color:black;color:white"
