/ Page for editting the details of a coach
!!!
%html{:lang => "en"}
  / Head
  %head
  = favicon_link_tag 'favicon.ico'
  / Linking all the style and javascript files needed
  %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}
  = stylesheet_link_tag    "application", media: :all
  = javascript_include_tag "application", media: "bootstrap.min"
  = csrf_meta_tags
  %body
    / Navigation, fixed at the top of the page
    / Contains the brand name and the log out button
    = render "schedules/top_navbar"
    / End of the navigation fixed at the top
    / Display the header using render
    = render "layouts/header"
    / Start of a section for the navigation bar
    %section
      / Navigation Bar
      = render "schedules/navbar_s"
      .container.align-items-center
        .row.align-items-center
          .col-md.mx-auto
            .p-4
            %h3 Editing Coach
            / Display the form containing the field required for a coach
            = render 'form'
        .p-3
        / Link to the show page for a specific coach
        = link_to 'Show', @coach, {:style => "color: black", :class => "btn"}
        \|
        / Option to go back
        = link_to 'Back', coaches_path, {:style => "color: black", :class => "btn"}
        .p-4
/ Footer
= render "layouts/footer"
/ End of footer
