/ Log In page
!!!
%html{:lang => "en"}
  %head
  / Title
  %title Login
  = favicon_link_tag 'favicon.ico'
  / Link all the style and javascript files needed
  %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}
    = stylesheet_link_tag    "sign_up", media: :all
    = javascript_include_tag "application"
    = csrf_meta_tags
  / Body
  %body
    .container
      .p-3
      / Link to the Home page
      = link_to "â—„ Return to Home page", "/", :class => "btn btn-primary rounded-pill"
    .signup-form
      / Creating the form`
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        / Heading
        %h2 Log In
        %p Please fill in your detalis to log in!
        %hr/
        .form-group
          .input-group
            %span
              / Icon for email, image
              = image_tag("email.png", class: "input-group-addon")
            / Email field
            = f.email_field :email, class:"form-control"
        / Password
        .form-group
          .input-group
            %span
              =image_tag("password.png", class: "input-group-addon")
            = f.password_field :password, autocomplete: "off", class: "form-control"
        / Remember me checkbox
        - if devise_mapping.rememberable?
          .form-group
            = f.check_box :remember_me
            = f.label :remember_me
        / Sign In button
        %button.btn.btn-lg.btn-primary.btn-block{id: 'Sign in'}Sign In
      / Forgot password link
      .text-float-left
        = link_to "Forgot your password?", "/forgot_password" #new_password_path(:user)
      / Sign Up link
      .text-float-right
        %a{:href => "/signup"} Sign Up Here!
